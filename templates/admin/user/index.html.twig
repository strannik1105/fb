{% extends 'admin/adminbase.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}

    <section class="container-fluid">
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-lg-6 col-md-6">
                <h1 class="display-5 text-center">
                    {{ title }}
                </h1>
            </div>
        </div>
    </section>

    <section class="container-fluid">
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-lg-8 col-md-8">
                <a class="btn btn-success mb-4" href="{{ path('admin_user_create') }}">Создать пользователя</a>
                <h2 class="mb-3">Список пользователей</h2>
                <ul>
                    {%  for user in users %}
                        <li>
                            {{ user.email }}, {{ user.roles | json_encode }}
                            {% if users|length > 1 %}
                                <a href="{{path('admin_user_delete', {'id': user.getId()}) }}">Удалить</a>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>



{% endblock %}