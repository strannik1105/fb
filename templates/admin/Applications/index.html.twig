{% extends 'admin/adminbase.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}

    <section class="container-fluid">
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-lg-6 col-md-6">
                <h1 class="display-5 text-center">
                    {{ title }}
                </h1>
            </div>
        </div>
    </section>

    <section class="container-fluid">
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-lg-8 col-md-8">
                <h2 class="mb-3">Заявки:</h2>
                <ul>
                    {% for item in applications %}
                        <li>
                            <p>ФИО: {{ item.getName() }}</p>
                            <p>Телефон: {{ item.getPhone() }}</p>
                            <p>Тип: {{ item.getType() }}</p>
                            <p>Регион: {{ item.getRegion() }}</p>
                            <p>IP: {{ item.getIp() }}</p>
                            <a href="{{ path('admin_application_delete', {'id': item.getId()}) }}">Удалить</a>
                        </li>
                    {% endfor %}
                </ul>
                <h2 class="mb-3">Тех.поддержка:</h2>
                <ul>
                    {% for item in support %}
                        <li>
                            <p>ФИО: {{ item.getName() }}</p>
                            <p>Телефон: {{ item.getPhone() }}</p>
                            <p>Проблема: {{ item.getProblem }}</p>
                            <p>Регион: {{ item.getRegion() }}</p>
                            <p>IP: {{ item.getIp() }}</p>
                            <a href="{{ path('admin_support_application_delete', {'id': item.getId()}) }}">Удалить</a>
                        </li>
                    {% endfor %}
                </ul>
                <h2 class="mb-3">Отклики:</h2>
                <ul>
                    {% for item in vacancy %}
                        <li>
                            <p>ФИО: {{ item.getName() }}</p>
                            <p>Телефон: {{ item.getPhone() }}</p>
                            <p>Должность: {{ item.getVacancy() }}</p>
                            <p>Резюме: {{ item.getResume() }}</p>
                            <p>Регион: {{ item.getRegion() }}</p>
                            <p>IP: {{ item.getIp() }}</p>
                            <a href="{{ path('admin_vacancy_delete', {'id': item.getId()}) }}">Удалить</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>



{% endblock %}